# Supabase (required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Merchant wallets (Base + Ethereum)
# Same address works for both if wallet supports multi-chain
NEXT_PUBLIC_MERCHANT_BASE_WALLET=0xYourBaseWalletAddress
NEXT_PUBLIC_MERCHANT_ETHEREUM_WALLET=0xYourEthereumWalletAddress

# Optional: different addresses per token (defaults to above)
# NEXT_PUBLIC_MERCHANT_BASE_USDC=0x...
# NEXT_PUBLIC_MERCHANT_ETHEREUM_USDC=0x...

# Reown AppKit / WalletConnect
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-project-id

# Optional: order emails via Resend
# RESEND_API_KEY=re_xxx
# YOUR_EMAIL=you@example.com
